<%- include('header.ejs') %>
<link rel="stylesheet" href="css/index.css">
<title>Se Connecter</title>
</head>
<body>
<%- include('navbar.ejs') %>
<% if(message){ %>
    <!-- alert error  -->
    <div class="container-fluid">
      <div class="col-12">
        <div class="alert text-center alert-danger alert-dismissible fade show" role="alert">
          <strong>Erreur : </strong>Identifiant non reconus ou pas encore inscrit
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
  <% } %>
<div class="row">
    <div class="text-center col-12">
        <label for=""class="labelForm text-center">Etes-vous ?</label>
    </div>
</div>
<form action="/welcomes" method="post">
    <div class="row">
            <div class="col-6 text-center radio_droite">
                <div class="form-check">
                    <input type="radio" name="radio" value="etudiant" id="radio_etud" class="form-check-input">
                    <label for="" class="form-check-label">Un étudiant</label>
                </div>
            </div>
            <div class="col-6 text-center">
                <div class="form-check">
                    <input type="radio" name="radio" value="professeur" id="radio_prof" class="form-check-input">
                    <label for="" class="form-check-label">Un Profésseur</label>
                </div>
            </div>
        <div class="col-6"></div>
    </div>
    <hr>
    <div class="row">
        <div class="form col-12">
            <div class="form-sign-in">
                <h4 class="col-12">S'identifier</h4>
                <label class="col-12 labelForm">Entrer votre adresse e-mail</label>
                    <div class="input-group">
                        <input type="text" required name="mail" id="inputMail" onkeyup="checkEmail()" class="form-control col-12" required placeholder="Votre adresse email">
                        
                    </div>
                    <i id="err"></i>
                    <label for="mot" class="col-12 labelForm">Mot de passe</label>
                    <input type="password" required name="pass" id="pass" class="col-12 form-control text-sm" placeholder="Entrer votre mot de passe">
                    <div class="check col-12 flex" style="margin-top: 15px; margin-left: -15px;">
                        <input type="checkbox" onclick="changeValue()" id="check" class="form-control col-1" style="margin-left: 0; margin-top: -5px;">
                        <label for="" class="col-11" style="font-size: 14px;">Afficher mot de passe</label>
                    </div>
                    <button type="submit" id="key_button_submit_auth" class="btn btn-dark col-12 btn-block btn-sm mb-4" style="margin-top: 15px;">Continuer</button>
            </div>
        </div>
    </div>
    <div class="row">
        <p class="col-12 text-center condition" style="margin-top: 15px;">Nouveaux chez Centre d'info</p>
    </div>
</form>
<div class="row">
    <div class="form-sign-out">
        <a href="/sign_up" id="sign" class="btn col-12 btn-block btn-sm">Créer votre compte</a>
    </div>
</div>
</div>
<script src="/js/dist/bootstrap.min.js"></script>
<script src="/js/index.js"></script>
</body>
</html>